generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CatCafe {
  id            Int             @id @default(autoincrement())
  name          String
  url           String
  CatCafeDetail CatCafeDetail[]
}

model CatCafeDetail {
  id              Int             @id @default(autoincrement())
  catCafeId       Int
  name            String
  prefectureId    PrefectureEnum
  address         String
  open            String
  close           String
  lastEntry       String?
  url             String
  regularHolidays DayOfWeekEnum[]
  CatCafe         CatCafe         @relation(fields: [catCafeId], references: [id])
  Cat             Cat[]
  Prefecture      Prefecture      @relation(fields: [prefectureId], references: [id])
}

model Cat {
  id              Int           @id @default(autoincrement())
  catCafeDetailId Int
  name            String
  sex             SexEnum
  birthDate       DateTime
  image           String
  catBreedId      CatBreedEnum
  CatCafeDetail   CatCafeDetail @relation(fields: [catCafeDetailId], references: [id])
  CatImage        CatImage[]
  CatBreed        CatBreed      @relation(fields: [catBreedId], references: [id])
}

model CatImage {
  id    Int    @id @default(autoincrement())
  catId Int
  image String
  Cat   Cat    @relation(fields: [catId], references: [id])
}

model CatBreed {
  id   CatBreedEnum @id
  name String
  Cat  Cat[]
}

model Prefecture {
  id            PrefectureEnum  @id
  name          String
  nameKana      String
  CatCafeDetail CatCafeDetail[]
}

