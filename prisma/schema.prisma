generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id         Int          @id @default(autoincrement())
  name       String
  url        String
  ShopDetail ShopDetail[]
}

model ShopDetail {
  id              Int             @id @default(autoincrement())
  shopId          Int
  name            String
  prefecture      PrefectureEnum
  address         String
  open            String
  close           String
  lastEntry       String?
  url             String
  image           String
  regularHolidays DayOfWeekEnum[]
  Shop            Shop            @relation(fields: [shopId], references: [id])
  Cat             Cat[]
}

model Cat {
  id           Int          @id @default(autoincrement())
  shopDetailId Int
  name         String
  sex          SexEnum
  birthDate    DateTime
  image        String
  youtube      String?
  instagram    String?
  catBreed     CatBreedEnum
  ShopDetail   ShopDetail   @relation(fields: [shopDetailId], references: [id])
  CatImage     CatImage[]
}

model CatImage {
  id    Int    @id @default(autoincrement())
  catId Int
  image String
  Cat   Cat    @relation(fields: [catId], references: [id])
}

enum DayOfWeekEnum {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
